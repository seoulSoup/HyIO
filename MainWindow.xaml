<Window x:Class="HyIO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Window.Chrome="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="HyIO Dashboard"
        Width="1300" Height="720"
        MinWidth="580" MinHeight="600"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="Transparent"
        Loaded="Window_Loaded">

    <Window.Chrome:WindowChrome.WindowChrome>
        <Window.Chrome:WindowChrome 
            CaptionHeight="0"
            ResizeBorderThickness="8"
            GlassFrameThickness="0"
            UseAeroCaptionButtons="False"
            CornerRadius="{StaticResource AppLargeCornerRadius}" />
    </Window.Chrome:WindowChrome.WindowChrome>

    <!-- 기존 내용 유지 -->

    

    <Border Style="{StaticResource RoundedWindowBorderStyle}">
        <!-- 전체 레이아웃: 상단바 + 본문 -->
        <Grid Background="{StaticResource AppBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- 상단 최소화/닫기 -->
                <RowDefinition Height="*"/>     <!-- 본문 -->
            </Grid.RowDefinitions>

            <!-- ==================== Row 0: 상단바 (우측 버튼만) ==================== -->
            <Grid Grid.Row="0"
                  Height="48"
                  Background="{StaticResource AppBackgroundBrush}"
                  MouseLeftButtonDown="HeaderBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 우측: 최소화 / 닫기 -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,8,16,0">
                    <Button Width="32" Height="24"
                            Margin="0,0,4,0"
                            Click="MinimizeButton_Click"
                            Background="{StaticResource ButtonVioletBrush}"
                            BorderBrush="Transparent">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Root"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="6"
                                        BorderBrush="Transparent">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <!-- 마우스 올라갔을 때 -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Root"
                                                Property="Background"
                                                Value="{StaticResource ButtonVioletMiddleBrush}"/> <!-- 살짝 더 진한 보라빛 -->
                                    </Trigger>
                                    <!-- 눌렀을 때 -->
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="Root"
                                                Property="Background"
                                                Value="{StaticResource ButtonVioletHighBrush}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock Text="━"
                                FontSize="10"
                                Foreground="{StaticResource AppTextSecondaryBrush}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                    </Button>


                    <Button Width="32" Height="24"
                            Click="CloseButton_Click"
                            Background="#FFDD4B4B"
                            BorderBrush="Transparent">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Root"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="6"
                                        BorderBrush="Transparent">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <!-- 마우스 올라갔을 때 : 조금 더 밝은 빨강 -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Root"
                                                Property="Background"
                                                Value="#FFF06B6B"/>
                                    </Trigger>
                                    <!-- 눌렀을 때 : 약간 더 진한 빨강 -->
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="Root"
                                                Property="Background"
                                                Value="#FFE03B3B"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock Text="✕"
                                FontSize="11"
                                Foreground="White"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                    </Button>


                </StackPanel>
            </Grid>

            <!-- ==================== Row 1: 본문 ==================== -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/> <!-- 왼쪽 네비 -->
                    <ColumnDefinition Width="30"/> <!-- 가운데 오렌지 -->
                    <ColumnDefinition Width="*"/>   <!-- 우측 페이지 -->
                </Grid.ColumnDefinitions>

                <!-- ===== 왼쪽 네비게이션 ===== -->
                <Border Grid.Column="0"
                        Margin="20,8,0,24"
                        CornerRadius="{StaticResource AppLargeCornerRadius}"
                        Background="#26295A">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 상단 로고 / 앱 이름 -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Top"
                                    Margin="24,32,24,20">
                            <Border Width="40" Height="40"
                                    CornerRadius="20"
                                    Background="#FF7B5CFF"   
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Padding="2"
                                    ClipToBounds="True">
                                <Border CornerRadius="18" ClipToBounds="True" Background="#FF7B5CFF">
                                    <Image Source="Resources/haru_wo_bg.png"  
                                        Stretch="UniformToFill"
                                        SnapsToDevicePixels="True"/>
                                </Border>
                            </Border>

                            <StackPanel Margin="16,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="HyIO"
                                           Foreground="White"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           FontFamily="{StaticResource AppFontFamily}"/>
                                <TextBlock Text="Hynix Image Overlay"
                                           Foreground="#B0FFFFFF"
                                           FontSize="12"
                                           FontFamily="{StaticResource AppFontFamily}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- 네비 버튼들 -->
                        <StackPanel Grid.Row="1"
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Stretch">
                            

                            <StackPanel.Resources>
                                <Style x:Key="NavButtonStyle" TargetType="Button">
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    <Setter Property="Padding" Value="0,0,0,0"/>
                                    <Setter Property="Height" Value="50"/>
                                    <!-- <Setter Property="Margin" Value="0,4,0,4"/> -->
                                    <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
                                    <Setter Property="Foreground" Value="#FFF0F0F0"/>
                                    <Setter Property="Background" Value="#FF26295A"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="Root"
                                                        Background="{TemplateBinding Background}">
                                                        <!-- CornerRadius="16"> -->
                                                    <ContentPresenter Margin="4,0,0,0"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <!-- <Trigger Property="IsMouseOver" Value="True"> -->
                                                        <!-- <Setter TargetName="Root" Property="Background" Value="#FFFFAF68"/> -->
                                                    <!-- </Trigger> -->
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="Root" Property="Background" Value="#FFFB923C"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </StackPanel.Resources>

                            <TextBlock Text="Navigation"
                                       Margin="24,12,0,12"
                                       Foreground="#90FFFFFF"
                                       FontSize="12"
                                       FontFamily="{StaticResource AppFontFamily}"/>

                            <Button x:Name="NavImageOverlay"
                                    Style="{StaticResource NavButtonStyle}"
                                    Click="NavImageOverlay_Click"
                                    Margin="0,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <!-- <TextBlock Text="📷" FontSize="16" Margin="0,0,8,0"/> -->
                                    <Image Source="Resources/Image.png"
                                           Width="30" Height="30"
                                           Stretch="UniformToFill"
                                           Margin="24,6,12,8"
                                           SnapsToDevicePixels="True"/>
                                    <TextBlock Text="이미지 목록"
                                               FontSize="16"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="NavFolderManager"
                                    Style="{StaticResource NavButtonStyle}"
                                    Click="NavFolderManager_Click"
                                    Margin="0,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <!-- <TextBlock Text="📁" FontSize="16" Margin="0,0,8,0"/> -->
                                    <Image Source="Resources/Folder.png"
                                           Width="30" Height="30"
                                           Stretch="UniformToFill"
                                           Margin="24,6,12,8"
                                           SnapsToDevicePixels="True"/>
                                    <TextBlock Text="폴더 매니저"
                                               FontSize="16"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="NavTagManager"
                                    Style="{StaticResource NavButtonStyle}"
                                    Click="NavTagManager_Click"
                                    Margin="0,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <!-- <TextBlock Text="🏷️" FontSize="16" Margin="0,0,8,0"/> -->
                                    <Image Source="Resources/Tag.png"
                                           Width="30" Height="30"
                                           Stretch="UniformToFill"
                                           Margin="24,6,12,8"
                                           SnapsToDevicePixels="True"/>
                                    <TextBlock Text="태그 매니저"
                                               FontSize="16"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="NavSettings"
                                    Style="{StaticResource NavButtonStyle}"
                                    Click="NavSettings_Click"
                                    Margin="0,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="Resources/Settings.png"
                                           Width="30" Height="30"
                                           Stretch="UniformToFill"
                                           Margin="24,6,12,8"
                                           SnapsToDevicePixels="True"/>
                                    <!-- <TextBlock Text="⚙️" FontSize="16" Margin="0,0,8,0"/> -->
                                    <TextBlock Text="설정"
                                               FontSize="16"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- 하단 버전 정보 -->
                        <StackPanel Grid.Row="2"
                                    Margin="24,32,24,20">
                            <TextBlock Text="HyIO · ImageOverlay"
                                       Foreground="#80FFFFFF"
                                       FontSize="11"
                                       FontFamily="{StaticResource AppFontFamily}"/>
                            <TextBlock Text="Tray helper for quick paste"
                                       Foreground="#60FFFFFF"
                                       FontSize="10"
                                       Margin="0,2,0,0"
                                       FontFamily="{StaticResource AppFontFamily}"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <!-- Mask -->
                <!-- 네비와 메인 사이 오렌지 컬럼 -->
                <Grid Grid.Column="1"
                    Width="30"
                    Margin="0,8,0,24">

                    <!-- 3개의 Row: 위 흰, 가운데 오렌지(높이 고정), 아래 흰(가변) -->
                    <Grid.RowDefinitions>
                        <!-- 위 마스크 영역 : 시작값 150, 코드에서 변경 가능 -->
                        <RowDefinition x:Name="RowUpper" Height="130" />
                        <!-- 가운데 오렌지 직사각형 높이 (고정) -->
                        <RowDefinition Height="50" />
                        <!-- 아래 마스크 영역 : 남은 부분 전부 -->
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- 전체를 오렌지로 채움 (실제 컬럼 색) -->
                    <Border Grid.Row="0" Grid.RowSpan="3">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#FFFB923C" Offset="0"/>
                                    <GradientStop Color="#CFFB923C" Offset="0.3"/>
                                    <GradientStop Color="#5FFB923C" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                    </Border>

                    <!-- 위 흰 마스크 (아래만 둥글게) -->
                    <Border Grid.Row="0"
                            Background="{StaticResource AppBackgroundBrush}"
                            CornerRadius="0,0,30,0" />

                    <!-- 가운데 Row(1)는 아무것도 넣지 않음
                        → 오렌지 컬럼이 그대로 직사각형으로 보이는 구간 -->

                    <!-- 아래 흰 마스크 (위만 둥글게) -->
                    <Border Grid.Row="2"
                            Background="{StaticResource AppBackgroundBrush}"
                            CornerRadius="0,30,0,0" />
                </Grid>

                <!-- ===== 우측 페이지 영역 ===== -->
                <Grid Grid.Column="2"
                      Margin="0,8,20,24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>  <!-- Dashboard 헤더 -->
                        <RowDefinition Height="*"/>     <!-- 페이지 컨텐츠 -->
                    </Grid.RowDefinitions>
                    <!-- Left Top Right Bottom -->
                    <!-- 우측 헤더: Dashboard + 설명 -->
                    <StackPanel Grid.Row="0"
                                Orientation="Vertical"
                                Margin="0,0,0,24">
                        <TextBlock x:Name="Dashboard"
                                   Text="이미지 선택"
                                   Foreground="{StaticResource AppTextPrimaryBrush}"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   Margin="12,0,0,6"
                                   FontFamily="{StaticResource AppFontFamily}"/>
                        <TextBlock x:Name="HeaderSubtitle"
                                   Text="즐겨 쓰는 이미지를 선택해서 복사/붙여넣기 할 수 있습니다."
                                   Foreground="{StaticResource AppTextSecondaryBrush}"
                                   FontSize="14"
                                   Margin="12,4,0,0"
                                   FontFamily="{StaticResource AppFontFamily}"/>
                    </StackPanel>

                    <!-- 우측 컨텐츠 카드 -->
                    <Border Grid.Row="1"
                            Background="{StaticResource AppSurfaceBrush}"
                            CornerRadius="{StaticResource AppLargeCornerRadius}"
                            Padding="24">
                        <ContentControl x:Name="MainContent"/>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
