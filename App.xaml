<Application x:Class="HyIO.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>

            <!-- 공통 폰트 -->
            <FontFamily x:Key="AppFontFamily">
                <!-- pack://application:,,,/Fonts/#Pretendard -->
                pack://application:,,,/Fonts/#ONE 모바일POP
            </FontFamily>

            <!-- 색상 정의 (밝은 테마, 필요하면 값은 나중에 마음대로 바꿔도 됨) -->
            <Color x:Key="AppBackgroundColor">#FFF5F6FA</Color>      <!-- 전체 배경 -->
            <Color x:Key="AppSurfaceColor">#5FFB923C</Color>         <!-- 카드/패널 -->
            <Color x:Key="AppSurfaceAltColor">#FFFFFFFF</Color>      <!-- 보조 카드 -->
            <Color x:Key="AppAccentColor">#FF6366F1</Color>          <!-- 포인트 색 -->
            <Color x:Key="AppBorderColor">#1F000000</Color>          <!-- 옅은 테두리 -->
            <Color x:Key="AppTextPrimaryColor">#FF111827</Color>     <!-- 본문 텍스트 -->
            <Color x:Key="AppTextSecondaryColor">#FF90939C</Color>   <!-- 서브 텍스트 -->
            <Color x:Key="ButtonBgViolet">#E0E5E7FF</Color>   <!-- 서브 텍스트 -->
            <Color x:Key="ButtonBgVioletMiddle">#FFC9D0FF</Color>   <!-- 서브 텍스트 -->
            <Color x:Key="ButtonBgVioletHigh">#FFAEA4FC</Color>   <!-- 서브 텍스트 -->
            <Color x:Key="ButtonBgOrange">#CFFB923C</Color>   <!-- 서브 텍스트 -->
            <Color x:Key="ButtonBgOrangeMiddle">#FFFB923C</Color>   <!-- 서브 텍스트 -->
            <Color x:Key="ButtonBgOrangeHigh">#FFFC770A</Color>   <!-- 서브 텍스트 -->

            <!-- 브러시 -->
            <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource AppBackgroundColor}"/>
            <SolidColorBrush x:Key="AppSurfaceBrush" Color="{StaticResource AppSurfaceColor}"/>
            <SolidColorBrush x:Key="AppSurfaceAltBrush" Color="{StaticResource AppSurfaceAltColor}"/>
            <SolidColorBrush x:Key="AppAccentBrush" Color="{StaticResource AppAccentColor}"/>
            <SolidColorBrush x:Key="AppBorderBrush" Color="{StaticResource AppBorderColor}"/>
            <SolidColorBrush x:Key="AppTextPrimaryBrush" Color="{StaticResource AppTextPrimaryColor}"/>
            <SolidColorBrush x:Key="AppTextSecondaryBrush" Color="{StaticResource AppTextSecondaryColor}"/>
            <SolidColorBrush x:Key="ButtonVioletBrush" Color="{StaticResource ButtonBgViolet}"/>
            <SolidColorBrush x:Key="ButtonVioletMiddleBrush" Color="{StaticResource ButtonBgVioletMiddle}"/>
            <SolidColorBrush x:Key="ButtonVioletHighBrush" Color="{StaticResource ButtonBgVioletHigh}"/>
            <SolidColorBrush x:Key="ButtonOrangeBrush" Color="{StaticResource ButtonBgOrange}"/>
            <SolidColorBrush x:Key="ButtonOrangeMiddleBrush" Color="{StaticResource ButtonBgOrangeMiddle}"/>
            <SolidColorBrush x:Key="ButtonOrangeHighBrush" Color="{StaticResource ButtonBgOrangeHigh}"/>
            <!-- Tag Manager 전용 ScrollBar 브러시 -->
            <SolidColorBrush x:Key="TagScrollBarTrackBackgroundBrush" Color="{StaticResource ButtonBgViolet}"/>
            <SolidColorBrush x:Key="TagScrollBarThumbBackgroundBrush" Color="{StaticResource ButtonBgVioletMiddle}"/>
            <SolidColorBrush x:Key="TagScrollBarThumbHoverBackgroundBrush" Color="{StaticResource ButtonBgVioletHigh}"/>

            <!-- Tag 칩 X 버튼용 브러시 -->
            <SolidColorBrush x:Key="TagChipCloseButtonBackgroundBrush"
                            Color="#EDE9FE"/>
            <SolidColorBrush x:Key="TagChipCloseButtonForegroundBrush"
                            Color="#7A7A7A"/>
            <SolidColorBrush x:Key="TagChipCloseButtonHoverBackgroundBrush"
                            Color="#FFFB7A7A"/>
            <SolidColorBrush x:Key="TagChipCloseButtonHoverForegroundBrush"
                            Color="#FFFFFFFF"/>
            <!-- 공통 CornerRadius -->
            <CornerRadius x:Key="AppLargeCornerRadius">24</CornerRadius>

            <!-- 메인 윈도우 바깥 Border 스타일 -->
            <Style x:Key="RoundedWindowBorderStyle" TargetType="Border">
                <!-- MainWindow.xaml에서 바로 쓰는 스타일 -->
                <Setter Property="Background" Value="{StaticResource AppBackgroundBrush}"/>
                <Setter Property="CornerRadius" Value="{StaticResource AppLargeCornerRadius}"/>
                <Setter Property="BorderBrush" Value="{StaticResource AppBorderBrush}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect ShadowDepth="0"
                                          BlurRadius="32"
                                          Opacity="0.25"/>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
